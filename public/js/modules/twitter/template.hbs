<div class="module-title">
    <h2>{{#each topics}} {{this}} {{/each}}</h2>
</div>
<div class="tweets">
{{#each tweets}}
    <div class="module-item {{#ifequalsinline @index 0 'animated fadeInLeft'}}{{/ifequalsinline}}">
    	<div class="module-item-image-wrapper">
            <a href="{{this.user.url}}" target="_blank">
                <img class="module-item-image" alt="{{this.user.name}}" src="{{this.user.profile_image_url_https}}" width="58" height="58" />
            </a>
    	</div>
        <div class="module-item-detail"><a href="{{this.user.url}}" target="_blank"><strong>{{this.user.name}}</a>:</strong> {{{this.text}}}</div>
    </div>
{{/each}}
</div>