<!-- refresh time -->
<div class="row">
    <label for="refresh">Refresh time (s)</label>
    <input class="persist" type="number" name="refresh" placeholder="300" value="{{config.refresh}}" />
</div>

<!-- user -->
<div class="row">
    <label for="user">User</label>
    <input class="persist" type="text" name="user" placeholder="User..." value="{{config.user}}" />
</div>

<!-- repository -->
<div class="row">
    <label for="repo">Repository</label>
    <input class="persist" type="text" name="repo" placeholder="Repository..." value="{{config.repo}}" />
</div>

<!-- nb commits -->
<div class="row">
    <label for="nb_commits_display">Number of commits</label>
    <input class="persist" type="number" name="nb_commits_display" placeholder="Number of commits..." value="{{config.nb_commits_display}}" />
</div>

<!-- token -->
<div class="row">
    <label for="token">API token</label>
    <input class="persist" type="text" name="token" placeholder="token..." value="{{config.token}}" />
</div>